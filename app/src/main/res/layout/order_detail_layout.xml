<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="140dp" android:orientation="horizontal"
    android:background="@drawable/bottom_border"
    android:layout_marginBottom="6dp">

    <ImageView
        android:background="@color/white"
        android:id="@+id/orvImage"
        android:layout_width="140dp"
        android:layout_height="130dp"
        android:src="@drawable/splash_image"
        android:padding="25dp"
        android:layout_margin="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/orvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product title add to cart"
            android:padding="8dp"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans_bold"
            android:textColor="#3C3C3C"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/orvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹284.00"
                android:textColor="#423D3D"
                android:textStyle="bold"
                android:textSize="16sp" />



        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:text="1 Kg"
            android:id="@+id/orvQuantity"
            android:textColor="#3C3C3C"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/orvNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X3"
                android:padding="4dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_bold"
                android:textColor="@color/main" />


        </RelativeLayout>



    </LinearLayout>

</LinearLayout>