<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccount"
    android:orientation="vertical">

    <include layout="@layout/toolbar1"
        android:id="@+id/aTBar"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_profile"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:paddingVertical="30dp">

        <EditText
            android:id="@+id/uAcNAme"
            android:drawableRight="@drawable/edit_icon"
            android:drawableTint="#555353"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/edit_text"
            android:text=""
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:textColor="#555353"/>

        <EditText
            android:id="@+id/uAcPhone"
            android:drawableRight="@drawable/edit_icon"
            android:drawableTint="#555353"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:text=""
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:textColor="#555353"/>

        <TextView
            android:id="@+id/uAcEmail"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text"
            android:text=""
            android:gravity="center"
            android:padding="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/open_sans"
            android:textColor="#555353"/>



    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/updateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans"
        android:background="@drawable/add_to_cart_btn"
        android:layout_marginHorizontal="60dp"/>


</LinearLayout>